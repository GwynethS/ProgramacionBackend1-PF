<div class="mt-5 mb-5 text-center">
  <h2>REAL TIME PRODUCTS</h2>
</div>

<div class="row">
  <div class="col-lg-4">
    <form
      id="addProductForm"
      enctype="multipart/form-data"
      class="border p-4 rounded shadow-sm"
    >
      <div class="form-group mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          class="form-control"
          required
        />
      </div>

      <div class="form-group mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="description"
          class="form-control"
          rows="3"
          required
        ></textarea>
      </div>

      <div class="form-group mb-3">
        <label for="code" class="form-label">Code</label>
        <input
          type="text"
          id="code"
          name="code"
          class="form-control"
          required
        />
      </div>

      <div class="form-group mb-3">
        <label for="price" class="form-label">Price</label>
        <input
          type="number"
          id="price"
          name="price"
          class="form-control"
          required
        />
      </div>

      <div class="form-group mb-3">
        <label for="stock" class="form-label">Stock</label>
        <input
          type="number"
          id="stock"
          name="stock"
          class="form-control"
          required
        />
      </div>

      <div class="form-group mb-3">
        <label for="category" class="form-label">Category</label>
        <input
          type="text"
          id="category"
          name="category"
          class="form-control"
          required
        />
      </div>

      <div class="form-group mb-3">
        <label for="thumbnails" class="form-label">Thumbnails</label>
        <input
          type="file"
          id="thumbnails"
          name="thumbnails"
          accept="image/*"
          multiple
          class="form-control"
        />
      </div>

      <button type="submit" class="btn btn-primary w-100">Add product</button>
    </form>
  </div>

  <div class="col-lg-8">
    <div id="productList" class="row g-5"></div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/static/assets/js/realtimeproducts.js"></script>